import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

import java.util.ArrayList;
import java.util.List;

class Category {
    private String name;
    private String description;

    public Category(String name, String description) {
        this.name = name;
        this.description = description;
    }

    public String getName() {
        return name;
    }

    public String getDescription() {
        return description;
    }
}

public class CategoryManagerTest {
    private CategoryManager categoryManager;
    private static final String BASE_URL = "http://techfios.com/test/101/";

    @BeforeClass
    public void setUp() {
        categoryManager = new CategoryManager();
    }

    @Test
    public void testAddCategoryAndDisplay() {
        String categoryName = "Test Category";
        String categoryDescription = "This is a test category.";

        categoryManager.addCategory(categoryName, categoryDescription);

        List<Category> categories = categoryManager.getCategories();
        Assert.assertEquals(categories.size(), 1, "Category count should be 1 after adding a category");

        Category category = categories.get(0);
        String expectedLink = BASE_URL + "?category=" + categoryName;
        Assert.assertEquals(category.getName(), categoryName, "Category name should match the added category");
        Assert.assertEquals(category.getDescription(), categoryDescription, "Category description should match the added category");
        Assert.assertEquals(getCategoryLink(category), expectedLink, "Category link should match the expected link");
    }

    @AfterClass
    public void tearDown() {
        categoryManager = null;
    }

    private String getCategoryLink(Category category) {
        return BASE_URL + "?category=" + category.getName();
    }
}
